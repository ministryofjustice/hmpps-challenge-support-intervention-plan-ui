{
  "name": "hmpps-challenge-support-intervention-plan-ui",
  "version": "0.0.1",
  "description": "Hmpps Challenge Support Intervention Plan Ui",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ministryofjustice/hmpps-challenge-support-intervention-plan-ui.git"
  },
  "license": "MIT",
  "scripts": {
    "prepare": "hmpps-precommit-hooks-prepare",
    "watch-ts": "tsc -w",
    "build": "node esbuild/esbuild.config.js --build",
    "start": "node $NODE_OPTIONS dist/server.js | bunyan -o short",
    "start:dev": "concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js --build --watch\" \"node esbuild/esbuild.config.js --dev-server\"",
    "start-e2e": "npx nyc instrument dist --nycrc-path ./.nycrc && node $NODE_DEBUG_OPTION --env-file=e2e-test.env dist/server.js | bunyan -o short",
    "start-feature": "npx nyc instrument dist --nycrc-path ./.nycrc && node $NODE_DEBUG_OPTION --env-file=e2e-test.env dist/server.js | bunyan -o short",
    "start-e2e:watch": "concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js  --build --watch \" \"node --env-file=e2e-test.env esbuild/esbuild.config.js --dev-test-server\"",
    "lint": "eslint . --cache --max-warnings 0",
    "lint-fix": "eslint . --cache --max-warnings 0 --fix",
    "typecheck": "tsc",
    "test": "jest --detectOpenHandles --forceExit",
    "test:ci": "jest --detectOpenHandles --runInBand",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "int-test": "cypress run --config video=false $INT_TEST_RUN_ARGS",
    "int-test-ui": "cypress open --e2e --browser chrome",
    "clean": "rm -rf dist node_modules",
    "rebuild": "npm run clean && npm i && npm run build",
    "swagger": "npx openapi-typescript https://csip-api-dev.hmpps.service.justice.gov.uk/v3/api-docs > ./server/@types/csip/index.d.ts",
    "precommit:secrets": "gitleaks git --pre-commit --redact --staged --verbose --config .gitleaks/config.toml",
    "precommit:lint": "node_modules/.bin/lint-staged",
    "precommit:verify": "npm run typecheck && npm test",
    "setup": "npm ci && hmpps-npm-script-run-allowlist"
  },
  "engines": {
    "node": "^24",
    "npm": "^10 || ^11"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "coverageDirectory": "test_results/jest/",
    "coverageReporters": [
      "json",
      "lcov"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "projects": [
      "./server",
      "./server/routes/journeys"
    ]
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-sqs": "^3.975.0",
    "@cypress/code-coverage": "^3.14.7",
    "@microsoft/applicationinsights-clickanalytics-js": "^3.3.11",
    "@microsoft/applicationinsights-web": "^3.3.11",
    "@ministryofjustice/frontend": "^7.1.1",
    "@ministryofjustice/hmpps-auth-clients": "^1.0.1",
    "@ministryofjustice/hmpps-connect-dps-components": "^2.2.0",
    "@ministryofjustice/hmpps-monitoring": "^1.0.1",
    "@ministryofjustice/hmpps-prison-permissions-lib": "^1.1.2",
    "@opentelemetry/api": "~1.9.0",
    "@sentry/cli": "^3.1.0",
    "@sentry/node": "^10.37.0",
    "agentkeepalive": "^4.6.0",
    "applicationinsights": "^2.9.8",
    "body-parser": "^2.2.2",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "compression": "^1.8.1",
    "connect-flash": "^0.1.1",
    "connect-redis": "^9.0.0",
    "csrf-sync": "^4.2.1",
    "date-fns": "^4.1.0",
    "express": "^5.2.1",
    "express-session": "^1.19.0",
    "govuk-frontend": "^5.14.0",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.1",
    "jwt-decode": "^4.0.0",
    "nocache": "^4.0.0",
    "nunjucks": "^3.2.4",
    "openapi-typescript": "^7.10.1",
    "passport": "^0.7.0",
    "passport-oauth2": "^1.8.0",
    "redis": "^5.10.0",
    "superagent": "^10.3.0",
    "url-value-parser": "^2.2.0",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@jgoz/esbuild-plugin-typecheck": "^4.0.4",
    "@ministryofjustice/eslint-config-hmpps": "^1.0.2",
    "@ministryofjustice/hmpps-npm-script-allowlist": "0.0.3",
    "@ministryofjustice/hmpps-precommit-hooks": "^1.0.2",
    "@testing-library/cypress": "^10.1.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/user-event": "^14.6.1",
    "@tsconfig/node22": "^22.0.5",
    "@types/bunyan": "^1.8.11",
    "@types/bunyan-format": "^0.2.9",
    "@types/compression": "^1.8.1",
    "@types/connect-flash": "0.0.40",
    "@types/cypress__code-coverage": "^3.10.2",
    "@types/express-session": "^1.18.2",
    "@types/http-errors": "^2.0.5",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.10",
    "@types/nunjucks": "^3.2.6",
    "@types/passport": "^1.0.17",
    "@types/passport-oauth2": "^1.8.0",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "audit-ci": "^7.1.0",
    "aws-sdk-client-mock": "^4.1.0",
    "axe-core": "^4.11.1",
    "chai": "^6.2.2",
    "chokidar": "^3.6.0",
    "concurrently": "^9.2.1",
    "cypress": "^15.9.0",
    "cypress-axe": "^1.7.0",
    "cypress-circleci-reporter": "^0.4.0",
    "cypress-ctrf-json-reporter": "^0.0.13",
    "cypress-diff": "^0.0.6",
    "cypress-multi-reporters": "^2.0.5",
    "dotenv": "^17.2.3",
    "esbuild": "^0.27.2",
    "esbuild-plugin-clean": "^1.0.1",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-plugin-manifest": "^1.0.5",
    "esbuild-sass-plugin": "^3.6.0",
    "glob": "^13.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-fixed-jsdom": "^0.0.11",
    "jest-html-reporter": "^4.3.0",
    "jest-junit": "^16.0.0",
    "jsonwebtoken": "^9.0.3",
    "lint-staged": "^16.2.7",
    "mocha-junit-reporter": "^2.2.1",
    "nock": "^14.0.10",
    "nyc": "^17.1.0",
    "prettier": "^3.8.1",
    "prettier-plugin-jinja-template": "^2.1.0",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.3"
  }
}
