{% from "govuk/components/button/macro.njk" import govukButton %}

{% extends "partials/layout.njk" %}

{% set fullWidth = true %}
{% set pageTitle = "Are you sure you want to change the outcome for the referral screening? - Change CSIP screening outcome" %}

{% block innerContent %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <span class="govuk-caption-l">Screen a CSIP referral</span>
      <h1 class="govuk-heading-l govuk-!-margin-bottom-7">Are you sure you want to cancel and delete this screening?</h1>

      <p>If you choose not to record this screening, you will lose the information you have entered.</p>
      </br>
      <p>If you record this screening in future, youâ€™ll need to enter the information again.</p>

      <div class="govuk-button-group">
        <form method="post">
          <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>
          {{ govukButton({
                text: "Yes, cancel this screening",
                preventDoubleClick: true,
                classes: "govuk-button--warning"
            }) }}
          {{ govukButton({
                text: "No, return to check answers",
                href: 'check-answers',
                classes: "govuk-button--secondary",
                preventDoubleClick: true
            }) }}
        </form>
      </div>
    </div>
  </div>

{% endblock %}