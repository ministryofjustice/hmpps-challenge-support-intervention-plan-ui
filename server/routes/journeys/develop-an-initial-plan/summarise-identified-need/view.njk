{% from "govuk/components/character-count/macro.njk" import govukCharacterCount %}
{% from "partials/submitButton/macro.njk" import submitButton %}

{% extends "partials/layout.njk" %}

{% set pageTitle = "Summarise the identified need - " + ("Update a plan" if isUpdate else "Develop an initial plan") %}

{% block innerContent %}
    {% include 'base/components/plan-caption.njk' %}
    <label for="identifiedNeed">
        <h1 class="govuk-heading-l govuk-!-margin-bottom-7">{{"Change the identified need summary" if isUpdate else "Summarise the identified need"}}</h1>
    </label>
    <form method="post">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>
        {{ govukCharacterCount({
            hint: {
                text: "This is a short description for your records."
            } if not isUpdate else undefined,
            maxlength: 1000,
            rows: 1,
            threshold: "100",
            id: "identifiedNeed",
            name: "identifiedNeed",
            value: identifiedNeed,
            classes: "single-row-textarea",
            errorMessage: validationErrors | findError('identifiedNeed')
        }) }}
        {{ submitButton({
            text: "Confirm and save" if isUpdate else "Continue",
            alternativeHyperlinkHref: isUpdate and ("/csip-records/" + recordUuid)
        }) }}
    </form>
{% endblock %}
