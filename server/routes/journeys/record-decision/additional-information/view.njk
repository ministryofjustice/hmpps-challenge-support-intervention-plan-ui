{% from "govuk/components/character-count/macro.njk" import govukCharacterCount %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% extends "partials/layout.njk" %}

{% set pageTitle = "Additional information - Record a CSIP investigation decision" %}

{% block innerContent %}
    <span class="govuk-caption-l">Record a CSIP investigation decision</span>
    <label for="actionOther">
        <h1 class="govuk-heading-l govuk-!-margin-bottom-7">Add additional information (optional)</h1>
    </label>
    <form method="post">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>
        {{ govukCharacterCount({
            maxlength: 4000,
            rows: 5,
            threshold: "75",
            id: "actionOther",
            name: "actionOther",
            value: actionOther,
            hint: {
                text: 'Any other information relating to the CSIP investigation decision, such as action already taken.'
            },
            errorMessage: validationErrors | findError('actionOther')
        }) }}
        {{ govukButton({
            text: "Continue",
            preventDoubleClick: true
        }) }}
    </form>
{% endblock %}