{% from "govuk/components/select/macro.njk" import govukSelect %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% extends "partials/layout.njk" %}

{% set pageTitle = "Which area do you work in? - Make a CSIP referral" %}

{% block innerContent %}
    <span class="govuk-caption-l">Make a CSIP referral</span>
    <form method="post">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>
        {{ govukSelect({
            label: {
                text: "Which area do you work in?",
                classes: "govuk-label--l govuk-!-margin-bottom-7",
                isPageHeading: true
            },
            id: "areaOfWork",
            name: "areaOfWork",
            items: areaOfWorkOptions,
            errorMessage: validationErrors | findError('areaOfWork')
        }) }}
        {{ govukButton({
            text: "Continue",
            preventDoubleClick: true
        }) }}
    </form>
{% endblock %}