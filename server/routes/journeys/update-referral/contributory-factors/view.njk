{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% extends "partials/layout.njk" %}

{% set pageTitle = "Update contributory factor - Update a CSIP referral" %}

{% block innerContent %}
    <span class="govuk-caption-l">Update a CSIP referral</span>
    <h1 class="govuk-heading-l govuk-!-margin-bottom-7">Change the contributory factor</h1>
    <form method="post">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>

        {{ govukRadios({
            id: "contributoryFactors",
            name: "contributoryFactors",
            items: contributoryFactorCheckboxes,
            hint: {
                text: "Select one option."
            },
            errorMessage: validationErrors | findError('contributoryFactors')
        }) }}

        {{ govukButton({
            text: "Confirm and save",
            preventDoubleClick: true
        }) }}
    </form>
{% endblock %}