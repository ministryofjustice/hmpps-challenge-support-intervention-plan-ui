{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% extends "partials/layout.njk" %}

{% set pageTitle = "Add contributory factor - Update a CSIP referral" %}

{% block innerContent %}
    <span class="govuk-caption-l">Update a CSIP referral</span>
    <h1 class="govuk-heading-l govuk-!-margin-bottom-7">Add another contributory factor</h1>
    <form method="post">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>
        {{ govukRadios({
            id: "factorType",
            name: "factorType",
            items: contributoryFactorRadios,
            hint: {
                text: "Select one option."
            },
            errorMessage: validationErrors | findError('factorType')
        }) }}
        {{ govukButton({
            text: "Continue",
            preventDoubleClick: true
        }) }}
    </form>
{% endblock %}