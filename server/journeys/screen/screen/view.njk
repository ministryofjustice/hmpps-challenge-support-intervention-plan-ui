{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/character-count/macro.njk" import govukCharacterCount %}
{% set pageTitle = "Screen CSIP referrall" %}
{% extends "partials/layout.njk" %}

{% block innerContent %}
  <h1 class="govuk-heading-l">Screen a CSIP referral</h1>

  <form method="POST">
    <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
    {{ govukRadios({
        name: "saferCustodyOutcome",
        fieldset: {
            legend: {
                text: "What's the outcome of Safer Custody screening?",
                classes: "govuk-fieldset__legend--m"
            }
        },
        items: saferCustodyOutcomeItems,
        errorMessage: validationErrors | findError('saferCustodyOutcome')
    }) }}
    
    {{ govukCharacterCount({
        label: {
          html: '<h2 class="govuk-heading-m">Describe the reasons for this decision</h2>'
        },
        maxlength: 4000,
        rows: 5,
        threshold: "75",
        id: "reasonForDecision",
        name: "reasonForDecision",
        value: reasonForDecision,
        errorMessage: validationErrors | findError('reasonForDecision')
    }) }}    
    {{ govukButton({
        text: "Continue"
    }) }}
  </form>
{% endblock %}
